<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>

  <body>
    <div class="jumbotron loginJumbo text-center">
      <img class="navImg" src="/images/white_logo_transparent_background.png" />
    </div>
    <div class="container">
      <form action="/auth/" method="POST">
        <div class="separate">
          <lablel for="name">Name: </lablel>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          />
        </div>
        <div class="separate">
          <lablel for="email">E-Mail: </lablel>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
        </div>
        <div class="separate">
          <lablel for="password">Password: </lablel>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
        </div>
        <br />
        <div class="text-center">
          <button type="submit">Login</button><br />
          <a href="/auth/register">Register</a>
        </div>
      </form>
    </div>
  </body>
</html>
